<div class="container mx-auto p-6">
  <h1 class="text-3xl font-bold mb-3 text-center">Sandwiches</h1>
  <% if flash[:notice] %>
    <div class="bg-green-100 text-green-800 px-4 py-2 rounded mb-4">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <%= form_with url: choose_shop_shops_path(), method: :post do |form| %>
    <%= form.label :shop_id, "Choose a shop", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <div class="flex">
      <%= form.select :shop_id, shops.map { |shop| [shop.name, shop.id] }, {}, class: "border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
      <%= form.submit "Submit", class: "bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 transition" %>
      <%= link_to "Reset", sandwiches_path, class: "bg-gray-300 text-gray-800 px-4 py-2 rounded hover:bg-gray-400 transition" %>
    </div>
  <% end %>
  
  <%= render partial: "sandwiches/list", locals: { sandwiches: sandwiches, no_sandwiches_msg: "" } %>
</div>
