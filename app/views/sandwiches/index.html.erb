<div class="container mx-auto p-6">
  <h1 class="text-3xl font-bold mb-3 text-center">Sandwiches</h1>
  <% if flash[:notice] %>
    <div class="bg-green-100 text-green-800 px-4 py-2 rounded mb-4">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <%= form_with url: choose_shop_shops_path(), method: :post, local: true do |form| %>
    <%= form.label :shop_id, "Choose a shop", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <div class="flex">
      <%= form.select :shop_id, shops.map { |shop| [shop.name, shop.id] }, {}, class: "border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
      <%= form.submit "Submit", class: "bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 transition" %>
    </div>
  <% end %>
  
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 mt-2.5">
    <% sandwiches.each do |sandwich| %>
      <a href="/sandwiches/<%= sandwich.id %>" class="block bg-white rounded-lg shadow p-4 hover:shadow-lg hover:bg-gray-50 transition">
        <div class="text-xl font-semibold text-gray-800"><%= sandwich.name %></div>
        <div class="text-gray-600 mt-1">$<%= sprintf('%.2f', sandwich.price) %></div>
      </a>
    <% end %>
  </div>
</div>
